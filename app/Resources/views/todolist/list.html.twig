{% extends 'layout.html.twig' %}
{% block body %}
<table class="table">
<caption>Optional table caption.</caption> 
<thead> <tr> <th>#</th> <th>Todo</th> <th>Due Date</th> <th>Action</th> </tr> 
</thead> 
<tbody> 
	
	{% for todo in todos %}
	<tr> 
		<th scope="row">{{todo.id}}</th> 
		<td>{{todo.name}}</td> <td>{{todo.dueDate| date('F j, Y')}}</td> 
		<td><a href="/todolist/details/{{todo.id}}" class="btn btn-success"> View</a>
		<a href="/todolist/edit/{{todo.id}}" class="btn btn-default"> Edit</a>
		<a href="/todolist/del/{{todo.id}}" class="btn btn-danger"> Delete</a>
		</td> 
		</tr> 
{% endfor %}

</tbody> 
</table>
{% endblock %}